@model IEnumerable<KenyattaUniversity.Models.Enrollment>

<h1>Your Dashboard</h1>

<h2>Your Enrolled Courses</h2>
<table class="table">
    <thead>
        <tr>
            <th>Course Title</th>
            <th>Credits</th>
            <th>Grade</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var enrollment in Model)
            {
                <tr>
                    <td>@enrollment.Course.Title</td>
                    <td>@enrollment.Course.Credits</td>
                    <td>@enrollment.Grade ?? "Not Graded"</td> <!-- Assuming Grade is a property -->
                </tr>
            }
        }
        else
        {
            <tr><td colspan="3">You are not enrolled in any courses.</td></tr>
        }
    </tbody>
</table>

<a asp-action="Enroll" class="btn btn-primary">Enroll in a Course</a>