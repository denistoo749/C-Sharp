@model IEnumerable<KenyattaUniversity.Models.Enrollment>

<h2>Student Dashboard</h2>

<h3>Your Enrollments</h3>
<table class="table">
    <thead>
        <tr>
            <th>Course Title</th>
            <th>Grade</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var enrollment in Model)
            {
                <tr>
                    <td>@enrollment.Course.Title</td>
                    <td>@enrollment.Grade ?? "N/A"</td> <!-- Display N/A if no grade -->
                    <td>
                        <a asp-action="EditEnrollment" asp-route-id="@enrollment.EnrollmentID">Edit Grade</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">You are not enrolled in any courses.</td>
            </tr>
        }
    </tbody>
</table>
