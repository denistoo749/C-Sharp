@model KenyattaUniversity.ViewModels.EnrollViewModel

<h1>Enroll in a Course</h1>

<form asp-action="Enroll" method="post">
    <div class="form-group">
        <label asp-for="SelectedCourseId">Select Course:</label>
        <select asp-for="SelectedCourseId" asp-items="@(new SelectList(Model.Courses, "CourseID", "Title"))" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Enroll</button>
</form>

<a asp-action="Dashboard" class="btn btn-secondary">Back to Dashboard</a>