@model KenyattaUniversity.Models.Enrollment

<h2>Edit Grade</h2>

<form asp-action="EditEnrollment" method="post">
    <div class="form-group">
        <label>Student Name</label>
        <input type="text" class="form-control" value="@Model.Student?.Fname @Model.Student?.Lname" readonly />
    </div>
    <div class="form-group">
        <label>Course Title</label>
        <input type="text" class="form-control" value="@Model.Course?.Title" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Grade" class="control-label"></label>
        <input asp-for="Grade" class="form-control" />
        <span asp-validation-for="Grade" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="EnrollmentID" /> <!-- Hidden field for EnrollmentID -->

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<a asp-controller="Admin" asp-action="Dashboard">Back to Dashboard</a>