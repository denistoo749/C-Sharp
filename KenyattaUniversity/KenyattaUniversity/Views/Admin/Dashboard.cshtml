@model KenyattaUniversity.ViewModels.AdminDashboardViewModel

<h1>Admin Dashboard</h1>

<h2>Students</h2>
<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Full Name</th>
            <th>Display Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model.Students)
        {
            <tr>
                <td>@student.Email</td>
                <td>@student.FullName</td>
                <td>@student.DisplayName</td>
            </tr>
        }
    </tbody>
</table>

<h2>Courses</h2>
<table class="table">
    <thead>
        <tr>
            <th>Course Title</th>
            <th>Credits</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model.Courses)
        {
            <tr>
                <td>@course.Title</td>
                <td>@course.Credits</td>
            </tr>
        }
    </tbody>
</table>

<h2>Enrollments</h2>
<table class="table">
    <thead>
        <tr>
            <th>Student Email</th>
            <th>Course Title</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var enrollment in Model.Enrollments)
        {
            var studentEmail = enrollment.Student.Email; // Assuming Enrollment has a reference to Student
            var courseTitle = enrollment.Course.Title; // Assuming Enrollment has a reference to Course

            <tr>
                <td>@studentEmail</td>
                <td>@courseTitle</td>
            </tr>
        }
    </tbody>
</table>

